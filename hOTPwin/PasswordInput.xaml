<Window x:Class="hOTPwin.PasswordInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hOTPwin"
        mc:Ignorable="d"
        Style="{StaticResource CustomWindowStyle}"
        Title="hOTP - Master Password" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label FontWeight="Bold" Content="Master Password" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.305,-1.452" Width="280"/>
        <PasswordBox Name="pwd" KeyDown="Pwd_OnKeyDown" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,80,0,0" FontSize="16" VerticalAlignment="Top" Width="280"/>
        <Button Click="Submit_OnClick" Content="Submit" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.305,-1.452" Width="280" Height="50"/>
    </Grid>
</Window>
